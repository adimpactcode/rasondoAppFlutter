rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin-Bereich
    match /adminCharacter/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if false;
      allow delete: if false;
    }

    // Haupt-Charaktere
    match /charactersMain/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if false;
      allow delete: if false;
    }

    // Chats
    match /chats/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if false;
      allow delete: if false;
    }

    // Bilder
    match /images/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if false;
      allow delete: if false;
    }

    // Nachrichten in Chats
    match /chats/{parent}/messages/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if false;
      allow delete: if false;
    }

    // Allgemeiner Nachrichtenlesezugriff
    match /{path=**}/messages/{document} {
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
    }

    // Zahlungen
    match /payments/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if false;
      allow delete: if false;
    }

    // Nutzercharaktere
    match /users/{parent}/userCharacters/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow delete: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
    }

    // Nutzerdaten
    match /users/{document} {
      allow create: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow read: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow write: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
      allow delete: if request.auth.token.email.matches("oezguer.firat@adimpact.pro");
    }

    // Standardregel f√ºr alle anderen Pfade
    match /{document=**} {
      allow read, write: if request.auth.token.email.matches("oezguer.firat@adimpact.pro")
                        || request.time < timestamp.date(2024, 12, 31); // Entwicklungszugriff bis Ende 2024
    }
  }
}
